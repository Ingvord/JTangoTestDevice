#
#		Rules for Tango lib generation
#


##############################################################################
#
#		PLEASE, Update library version here (for versionning support)
#
##############################################################################

MAJOR_VERS = 5
MINOR_VERS = 0

##############################################################################
#
# 		The base directory
#
##############################################################################

TANGO_HOME = /usr/local/tango

##############################################################################
#
# 		Choose your OS here
#
# Supported values are :
#	_solaris for SunOS 5.7
#	_solaris9 for SunOS 5.9
#	linux for Suse72
#	suse82 for Suse82
#	debian30 for Debina 3.0
#	hpux for HPUX 11 (Not official)
#
##############################################################################

#_solaris=1

#gcc

#_solaris=1
#_solaris9=1
linux=1
debian30=1
#suse82=1
#hpux=1

##############################################################################
#
#		Choose your compiler here (only when using linux suse72)
#
##############################################################################

#gcc32=1

##############################################################################
#
# 		The directory where generated libs will be placed
#		They will automatically be created if they do not
#		already exist.
#
##############################################################################
ifdef _solaris
BIN_DIR = solaris7_CC
endif

ifdef _solaris9
BIN_DIR = solaris9_CC
endif

ifdef linux
ifdef gcc32
BIN_DIR = suse72_gcc32
else
BIN_DIR = suse72
endif
endif

ifdef suse82
BIN_DIR = suse82
endif

ifdef debian30
BIN_DIR = debian30
endif

ifdef hpux
BIN_DIR = hpux
endif

##############################################################################
#
# 		OmniORB base directory
#
##############################################################################
OMNI_BASE = /usr/local/omniorb


##############################################################################
#
# 		Log4tango base directory
#
##############################################################################

ifdef linux
LOG4TANGO_BASE = /home/chiam/src/tango-4.3.0/lib/cpp/log4tango
